<!--pages/wxml/wxml.wxml-->
<view>时间：{{time}}</view>

<button size="mini" bindtap="handleSwiteColor">改变颜色</button>
<view class="box {{isActive ? 'active': ''}}">下雨天</view>

<view>---------------------------</view>
<!-- wx:if 使用-->
<button bindtap="handleCheck" size="mini">切换显示</button>
<view wx:if='{{isShow}}'>嘿嘿嘿</view>

<view>---------------------------</view>

<view>我的成绩：{{score}}</view>
<view wx:if='{{score>=90}}'>优秀</view>
<view wx:elif='{{score>70}}'>良好</view>
<view wx:elif='{{score>60}}'>及格</view>
<view wx:else>不及格</view>
<button size="mini" bindtap="handleAdd">点击增加6分</button>

<!-- hidden 属性 -->
<view hidden="{{false}}">我是hidden 属性控制的内容</view>

<!-- wx:if 和 hidden 在隐藏组件时有什么区别 -->
<!-- 
  区别：
      hidden：将一个组件隐藏起来时，该组件依然是存在（diaplay:none）
      wx：if:将一个组件隐藏起来时，该组件不存在（压根没有创建）
      选择：
      如果显示和隐藏切换的频繁非常高，选择使用hidden
      如果显示和隐藏切换的频繁非常低，那么选择wx:if

 -->

<!-- wx:for -->
<!-- 
  wx:for-item/index:为item/index重命名

 -->
<view wx:for="{{ ['a','b','c','d'] }}">{{item}} {{index}}</view>
<block wx:for="{{moives}}" wx:for-item="outItem" wx:for-index = "i" wx:key = "{{index}}">
  {{i}}---
  <block wx:for = "{{outItem}}">{{item}}---</block>
  <view wx:for = "{{outItem}}">{{item}}</view>
</block>


